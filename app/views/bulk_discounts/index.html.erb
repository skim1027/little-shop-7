<div class="merch_header"> Little Esty Shop</div><br>
<p><%= link_to "Create a New Discount", new_merchant_bulk_discount_path(@merchant) %></p>

<% @discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <div class="button-container">
      <%= link_to "Discount Number: #{discount.id}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %> 
      <%= button_to "Delete", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </div><br>
    <li>Discount Percent: <%= discount.discount_percent %>%</li>
    <li>Quantity Threshold: <%= discount.threshold %> items</li><br>
  </div>
<% end %>

