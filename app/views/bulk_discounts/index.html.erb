<div class="merch_header"> Little Esty Shop</div><br>
<div class ="merch_nav_button"><%= link_to "Merchant Invoices", "/merchants/#{@merchant.id}/invoices" %></div>
<div class ="merch_nav_button"><%= link_to "Merchant Items", "/merchants/#{@merchant.id}/items" %></div>
<div class ="merch_current_button">Merchant Bulk Discounts</div>
<div class ="merch_nav_button"><%= link_to "Merchant Dashboard", "/merchants/#{@merchant.id}/dashboard" %></div>
<div class ="merch_nav_button"><%= link_to "Admin Dashboard", "/admin" %></div>

<h3> <%= @merchant.name %> </h3>

<p><%= link_to "Create a New Discount", new_merchant_bulk_discount_path(@merchant) %></p><br><br>

<div class="merch_sub_full_center">
<h3> Discounts  </h3></div><br><br>

<% @discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <div class="button-container">
      <li><%= link_to "Discount Number: #{discount.id}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %> 
      <%= button_to "Delete", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </li></div>
    <ol>Discount Percent: <%= discount.discount_percent %>%</ol>
    <ol>Quantity Threshold: <%= discount.threshold %> items</ol><br>
  </div>
<% end %>

